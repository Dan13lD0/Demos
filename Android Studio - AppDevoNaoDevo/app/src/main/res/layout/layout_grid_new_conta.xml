<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <android.support.v7.widget.CardView
        android:id="@+id/cdNovaConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="6dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="5"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowSpan="4"
                android:layout_column="0"
                app:srcCompat="@drawable/ic_divida"
                android:background="@drawable/shape_redondo"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="5"
                android:text="Supermercado"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_delete"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_gravity="right"/>

            <TextView
                android:id="@+id/txtTextoParcelado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:text="Parcelado"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtQtde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:text="1/8"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtTextoParcela"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_marginLeft="3dp"
                android:text="Vlr Parcela"
                android:textAlignment="textEnd"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVlrParcela"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="4"
                android:layout_marginLeft="5dp"
                android:text="1.236,26"
                android:textAlignment="textEnd"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtTexoEntrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="Entrada"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEntrada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginLeft="3dp"
                android:text="1.987,98"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtTexoDataCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="Data Compra"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_marginLeft="3dp"
                android:text="22/01/2018"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtTextoTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="5dp"
                android:text="Total"
                android:textAlignment="textEnd"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="4"
                android:layout_marginLeft="5dp"
                android:text="3,598,17"
                android:textAlignment="textEnd"
                android:textSize="17sp" />

        </GridLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>