<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_sair"
    android:layout_margin="10dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dtCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtNameDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de"
            android:textColor="@color/colorInptu"
            android:inputType="date" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dtCompraAte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtNameDateAte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data atÃ©"
            android:textColor="@color/colorInptu"
            android:inputType="date" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_botao"
        android:text="Buscar"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="7dp"/>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_botao"
        android:text="Voltar"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"/>

</LinearLayout>