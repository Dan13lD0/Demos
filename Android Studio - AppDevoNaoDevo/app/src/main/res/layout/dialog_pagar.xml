<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/shape_dialog_sair">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casas Bahia"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagamento"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_row="1"
        android:layout_column="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Casas Bahia"
        android:textSize="17sp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vencimento"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_column="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/01/2018"
        android:textSize="17sp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="valor"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_column="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123,43"
        android:textSize="17sp"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_marginLeft="5dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dtCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="4"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtNameDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data Compra"
            android:inputType="date"
            android:textColor="@color/colorInptu" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="4"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor"
            android:inputType="numberDecimal"
            android:textColor="@color/colorInptu" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_marginTop="7dp"
        android:background="@drawable/shape_botao"
        android:text="Pagar"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/shape_botao"
        android:text="Voltar"
        android:textColor="@color/colorPrimary"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_columnSpan="4"/>

</GridLayout>


</LinearLayout>